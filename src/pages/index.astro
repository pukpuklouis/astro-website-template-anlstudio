---
// src/pages/index.astro
// Home page with authentication showcase

import Layout from '../layouts/Layout.astro';
import UserProfile from '../components/auth/UserProfile.astro';
import type { User } from '../types';

// Get the user from Astro.locals
const user = Astro.locals.user as User | null;
---

<Layout title="Home | Astro Website Template">
  <main class="container">
    <section class="hero">
      <h1>Welcome to Astro Website Template</h1>
      <p class="subtitle">A modern template with Better Auth authentication</p>
      
      <div class="cta-buttons">
        {!user && (
          <>
            <a href="/login" class="cta-button primary">Get Started</a>
            <a href="/features" class="cta-button secondary">Learn More</a>
          </>
        )}
        {user && (
          <a href="/dashboard" class="cta-button primary">Go to Dashboard</a>
        )}
      </div>
    </section>
    
    <section class="auth-showcase">
      <div class="showcase-content">
        <h2>Authentication Made Simple</h2>
        <p>
          This template includes a complete authentication system powered by Better Auth and Cloudflare D1.
          Try it out by creating an account or logging in.
        </p>
        <ul class="feature-list">
          <li>Secure authentication with Cloudflare D1</li>
          <li>Email and password authentication</li>
          <li>Protected routes and middleware</li>
          <li>TypeScript support</li>
          <li>User profiles and session management</li>
        </ul>
      </div>
      
      <div class="auth-demo">
        <div class="auth-card">
          <h3>Authentication Status</h3>
          <UserProfile user={user} />
        </div>
      </div>
    </section>
    
    <section class="features">
      <h2>Key Features</h2>
      <div class="feature-grid">
        <div class="feature-card">
          <div class="feature-icon">ðŸ”’</div>
          <h3>Secure Authentication</h3>
          <p>Built-in authentication with Better Auth and Cloudflare D1</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">âš¡</div>
          <h3>Blazing Fast</h3>
          <p>Built on Astro for optimal performance and minimal JavaScript</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">ðŸ§©</div>
          <h3>Modular Components</h3>
          <p>Reusable components for building your website</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">ðŸ“±</div>
          <h3>Responsive Design</h3>
          <p>Looks great on all devices, from mobile to desktop</p>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .hero {
    text-align: center;
    padding: 4rem 0;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }
  
  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .cta-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .cta-button.primary {
    background-color: var(--color-primary);
    color: white;
  }
  
  .cta-button.primary:hover {
    background-color: var(--color-primary-dark);
  }
  
  .cta-button.secondary {
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
  }
  
  .cta-button.secondary:hover {
    background-color: rgba(59, 130, 246, 0.1);
  }
  
  .auth-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin: 4rem 0;
    align-items: center;
  }
  
  @media (max-width: 768px) {
    .auth-showcase {
      grid-template-columns: 1fr;
    }
  }
  
  .showcase-content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .showcase-content p {
    margin-bottom: 1.5rem;
  }
  
  .feature-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }
  
  .feature-list li {
    padding: 0.5rem 0;
    display: flex;
    align-items: center;
  }
  
  .feature-list li::before {
    content: "âœ“";
    color: #10b981;
    font-weight: bold;
    margin-right: 0.5rem;
  }
  
  .auth-card {
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
  }
  
  .auth-card h3 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .features {
    margin: 4rem 0;
    text-align: center;
  }
  
  .features h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .feature-card {
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  
  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .feature-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
  
  .feature-card p {
    font-size: 0.875rem;
  }
</style>
