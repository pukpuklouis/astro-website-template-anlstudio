---
import { Button } from '../components/ui/button';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>UI Test Page</title>
  </head>
  <body class="p-8">
    <div class="max-w-2xl mx-auto space-y-8">
      <h1 class="text-4xl font-bold text-primary">UI Components Test</h1>
      
      <div class="space-y-4">
        <h2 class="text-2xl font-semibold text-foreground">Buttons</h2>
        <div class="flex flex-wrap gap-4">
          <Button>Default Button</Button>
          <Button variant="destructive">Destructive</Button>
          <Button variant="outline">Outline</Button>
          <Button variant="secondary">Secondary</Button>
          <Button variant="ghost">Ghost</Button>
          <Button variant="link">Link</Button>
        </div>
      </div>

      <div class="space-y-4">
        <h2 class="text-2xl font-semibold text-foreground">Button Sizes</h2>
        <div class="flex flex-wrap items-center gap-4">
          <Button size="sm">Small</Button>
          <Button size="default">Default</Button>
          <Button size="lg">Large</Button>
          <Button size="icon">
            <span>+</span>
          </Button>
        </div>
      </div>
    </div>
  </body>
</html>
